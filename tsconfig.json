{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true
      }
    ],
    "baseUrl": "./"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}